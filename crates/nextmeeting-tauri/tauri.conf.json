{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "nextmeeting",
  "version": "0.1.0",
  "identifier": "io.github.chmouel.nextmeeting.gui",
  "build": {
    "frontendDist": "ui"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "nextmeeting",
        "width": 430,
        "height": 560,
        "resizable": false,
        "fullscreen": false,
        "decorations": true,
        "alwaysOnTop": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all"
  }
}
